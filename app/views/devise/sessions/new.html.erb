<div class="auth-container">
  <div class="auth-box">
    <h1 class="auth-title">サインイン</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="auth-form">
        <div class="field">
          <%= f.email_field :email, placeholder: "Eメール", autofocus: true, class: "auth-input", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "パスワード", class: "auth-input", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field remember-me">
            <%= f.check_box :remember_me, class: "auth-checkbox" %>
            <%= f.label :remember_me, "ログイン状態を保持する", class: "auth-checkbox-label" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "auth-button" %>
        </div>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %><br>
      <%= link_to "アカウントを作成する", new_registration_path(resource_name) %>
    </div>

    <%= button_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, data: { turbo: false } %>
    <%= button_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, data: { turbo: false } %>
  </div>
</div>
