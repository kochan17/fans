<div class="auth-container">
  <div class="auth-box">
    <h1 class="auth-title">サインアップ</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="auth-form">
        <div class="field">
          <%= f.email_field :email, placeholder: "Eメール", autofocus: true, class: "auth-input", autocomplete: "email" %>
        </div>

        <%# <div class="field">
          <%= f.password_field :password, placeholder: "パスワード", class: "auth-input", autocomplete: "new-password" %>
        <%# </div>

        <div class="field">
          <%= f.password_field :password_confirmation, placeholder: "パスワード確認", class: "auth-input", autocomplete: "new-password" %>
        <%# </div>  %>
         <%if @sns_id.present? %>
            <%= hidden_field_tag :sns_auth, true %>
          <% else %>
            <div class="field">
              <%= f.label :password %>
              <% @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          <% end %>

        <div class="actions">
          <%= f.submit "サインアップ", class: "auth-button" %>
        </div>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "すでにアカウントをお持ちですか？ ログイン", new_session_path(resource_name) %>
    </div>
  </div>

  <%= button_to "Facebookで登録", user_facebook_omniauth_authorize_path, data: { turbo: false } %>
  <%= button_to "Googleで登録", user_google_oauth2_omniauth_authorize_path, data: { turbo: false } %>
</div>
